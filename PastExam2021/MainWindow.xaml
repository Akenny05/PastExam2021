<Window x:Class="PastExam2021.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PastExam2021"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid x:Name="tbxTransactionAmount">
        <CheckBox x:Name="cbCurrentAccount" Content="Current Accounts" HorizontalAlignment="Left" Margin="64,55,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.531,0.581"/>
        <CheckBox x:Name="cbSavings" Content="Savings Accounts" HorizontalAlignment="Left" Margin="192,55,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxAccounts" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="54,75,469,33" SelectionChanged="lbxAccounts_SelectionChanged"/>
        <Label Content="Account Details&#xD;&#xA;" HorizontalAlignment="Left" Margin="373,52,0,0" VerticalAlignment="Top" Height="24"/>
        <Label Content="First Name&#xD;&#xA;" HorizontalAlignment="Left" Margin="373,81,0,0" VerticalAlignment="Top" Height="24"/>
        <Label Content="Last Name&#xD;&#xA;" HorizontalAlignment="Left" Margin="374,110,0,0" VerticalAlignment="Top" Height="25"/>
        <Label Content="Balance&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Height="24"/>
        <Label Content="Account Type&#xD;&#xA;" HorizontalAlignment="Left" Margin="375,169,0,0" VerticalAlignment="Top" Height="25"/>
        <Label Content="Interest Date&#xD;&#xA;" HorizontalAlignment="Left" Margin="377,0,0,0" VerticalAlignment="Center" Height="25"/>
        <Label Content="Transaction Amount&#xD;&#xA;" HorizontalAlignment="Left" Margin="373,274,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="522,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkFirstName" HorizontalAlignment="Left" Margin="497,85,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkLastName" HorizontalAlignment="Left" Margin="497,115,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkBalance" HorizontalAlignment="Left" Margin="497,144,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkAccountType" HorizontalAlignment="Left" Margin="497,174,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkInterestdate" HorizontalAlignment="Left" Margin="497,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center"/>
        <TextBox x:Name="tbxTransactionAmount1" HorizontalAlignment="Left" Margin="497,277,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnDeposit" Content="Deposit&#xD;&#xA;" HorizontalAlignment="Left" Margin="665,93,0,0" VerticalAlignment="Top" Height="20"/>
        <Button x:Name="btnWithdraw" Content="Withdraw&#xD;&#xA;" HorizontalAlignment="Left" Margin="665,122,0,0" VerticalAlignment="Top"  Height="20"/>
        <Button x:Name="btnInterest" Content="Interest&#xD;&#xA;" HorizontalAlignment="Left" Margin="665,152,0,0" VerticalAlignment="Top" Height="18" RenderTransformOrigin="0.447,0.44"/>

    </Grid>
</Window>
